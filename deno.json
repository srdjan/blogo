{
  "tasks": {
    "start": "deno serve --allow-net --allow-read --allow-env --allow-write --port 8000 app.tsx",
    "dev": "deno serve --allow-net --allow-read --allow-env --allow-write --watch --port 8000 app.tsx",
    "mixon": "deno run --allow-net --allow-read --allow-env --allow-write main.ts",
    "mixon-dev": "deno run --allow-net --allow-read --allow-env --allow-write --watch main.ts",
    "setup": "mkdir -p public/css public/js content/posts && curl -sL https://unpkg.com/htmx.org/dist/htmx.min.js -o public/js/htmx.min.js"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": false
    }
  },
  "lint": {
    "include": [
      "src/",
      "main.ts"
    ]
  },
  "imports": {
    "mono-jsx": "npm:mono-jsx@^0.3.2",
    "@srdjan/mixon": "jsr:@srdjan/mixon@^1.0.2"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "mono-jsx"
  },
  "deploy": {
    "exclude": [
      "**/node_modules"
    ],
    "include": [],
    "entrypoint": "app.tsx"
  }
}
