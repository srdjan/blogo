{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --allow-write main.ts --unstable-kv ",
    "dev": "deno run --allow-net --allow-read --allow-env --allow-write --watch main.ts --unstable-kv ",
    "setup": "mkdir -p public/css public/js content/posts && curl -sL https://unpkg.com/htmx.org/dist/htmx.min.js -o public/js/htmx.min.js"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 80,
      "singleQuote": false
    }
  },
  "lint": {
    "include": [
      "src/",
      "main.ts"
    ]
  },
  "imports": {
    "mono-jsx": "npm:mono-jsx@^0.3.2"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "mono-jsx"
  }
}